Package: imager
Type: Package
Title: Image Processing Library Based on 'CImg'
Version: 0.45.8
Authors@R: c(person("Simon","Barthelme",email="simon.barthelme@gipsa-lab.fr",role=c("aut")),
 person("David","Tschumperle",role=c("ctb")),
